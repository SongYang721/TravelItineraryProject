@page "/"

<PageTitle>Wonderous Voyages</PageTitle>

<!-- Styles -->
<style>
    /* 🔹 Reset Body & HTML to Remove Unwanted Margins */
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow-x: hidden; /* Prevents horizontal scrolling */
    }

    /* 🔹 Fix the Top Navbar */
    .top-navbar {
        background: linear-gradient(to right, #00274d, #3a007d);
        color: white;
        padding: 15px 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
    }

    .logo {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .nav-links {
        display: flex;
        gap: 15px;
    }

        .nav-links a {
            color: white;
            text-decoration: none;
            font-size: 16px;
            font-weight: bold;
            padding: 10px 15px;
            transition: 0.3s;
        }

            .nav-links a:hover {
                background: rgba(255, 255, 255, 0.2);
                border-radius: 5px;
            }

    .about-link a {
        color: white;
        text-decoration: none;
        font-size: 16px;
    }

    /* 🔹 Make Hero Section Cover Entire Screen */
    .hero {
        background: url('/images/mountain-lake.jpeg') no-repeat center center fixed;
        background-size: cover;
        width: 100vw; /* Full width */
        height: 100vh; /* Full height */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1; /* Ensures it stays behind content */
    }

        /* 🔹 Dark Overlay for Readability */
        .hero::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

        /* 🔹 Ensure Text is Above Overlay */
        .hero h1,
        .hero p {
            position: relative;
            z-index: 2;
        }

        /* 🔹 Fix Highlighted Text */
        .hero span {
            background: rgba(255, 215, 0, 0.9);
            padding: 5px 15px;
            border-radius: 5px;
            color: black;
            font-weight: bold;
        }

    /* 🔹 Push Main Content Down */
    .content {
        position: relative;
        margin-top: 100vh; /* Pushes content below hero */
    }
</style>

<!-- Top Navigation Bar -->
<div class="top-navbar">
    <div class="logo">TravelItineraryProject</div>
    <nav class="nav-links">
        <a href="/">Home</a>
        <a href="/itineraries">Travel Itineraries</a>
        <a href="/bookings">Booking</a>
        <a href="/payments">Payment</a>
        <a href="/reviews">Reviews</a>
        <a href="/supports">Support</a>
    </nav>
    <div class="about-link">
        <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
    </div>
</div>

<!-- Full-Screen Hero Section -->
<div class="hero">
    <h1>Enjoy Traveling Around With <span>Wonderous Voyages</span></h1>
    <p>Every great adventure starts with a dream. Let us turn yours into reality—book your journey today!</p>
</div>

<!-- Main Content (Starts After Hero) -->
<div class="content">
    <p>Other content goes here...</p>
</div>